rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /registrations/{registrationId} {
      // Allow anyone to create a registration
      allow create: if true;
      // Allow anyone to read registrations (for admin validation)
      allow read: if true;
    }
    
    match /validation_logs/{logId} {
        // Allow server-side actions to create logs
        allow create: if true;
        // Allow admin pages to read logs
        allow read: if true;
    }
  }
}
